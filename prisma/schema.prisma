generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model applications {
  id               String       @id @default(uuid())
  email            String
  seller_name      String
  phone            String?
  category         String
  language         String
  status           String       @default("pending")
  submitted_fields Json?
  created_at       DateTime     @default(now())
  updated_at       DateTime     @updatedAt
  audit_logs       audit_logs[]
}

model audit_logs {
  id           String       @id @default(uuid())
  actor_id     String?
  entity_type  String
  entity_id    String
  action       String
  meta         Json?
  created_at   DateTime     @default(now())
  profiles     profiles?    @relation(fields: [actor_id], references: [id])
  applications applications @relation(fields: [entity_id], references: [id])
}

model badges {
  id            String          @id @default(uuid())
  seller_id     String
  code          String          @unique
  status        String          @default("active")
  issued_at     DateTime        @default(now())
  valid_until   DateTime
  sellers       sellers         @relation(fields: [seller_id], references: [id], onDelete: Cascade)
  verifications verifications[]
}

model profiles {
  id         String       @id @default(uuid())
  user_id    String       @unique
  email      String
  created_at DateTime     @default(now())
  updated_at DateTime     @updatedAt
  audit_logs audit_logs[]
}

model sellers {
  id         String   @id @default(uuid())
  name       String
  city       String?
  category   String
  shop_url   String?
  level      String   @default("basic")
  created_at DateTime @default(now())
  badges     badges[]
}

model verifications {
  id         String   @id @default(uuid())
  badge_id   String
  checked_at DateTime @default(now())
  ip         String?
  result     String
  badges     badges   @relation(fields: [badge_id], references: [id], onDelete: Cascade)
}
